   issn = {0006-8950},
   issue = {1},
   journal = {Brain},
   keywords = {adult,brain,cerebral blood flow,dissociation,extrastriate cortex,face,facial recognition,fusiform gyrus,gender,neuroanatomy,nuclear magnetic resonance,object recognition,oxygen,parahippocampal gyrus,positron-emission tomography,prosopagnosia,right cerebral hemisphere,temporal lobe},
   month = {2},
   pages = {15-36},
   pmid = {1559150},
