   pmid = {21273428},
   publisher = {Society for Neuroscience},
   title = {Spatiotemporal Evolution of the Functional Magnetic Resonance Imaging Response to Ultrashort Stimuli},
   volume = {31},
   url = {https://www.jneurosci.org/content/31/4/1440 https://www.jneurosci.org/content/31/4/1440.abstract},
   year = {2011},
}
