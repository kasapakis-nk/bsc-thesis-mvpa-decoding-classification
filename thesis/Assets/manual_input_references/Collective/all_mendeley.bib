   title = {Basics of Multivariate Analysis in Neuroimaging Data},
   url = {/pmc/articles/PMC3074457/ /pmc/articles/PMC3074457/?report=abstract https://www.ncbi.nlm.nih.gov/pmc/articles/PMC3074457/},
